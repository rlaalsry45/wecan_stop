/**common**/
div#skin h1,h2,h3,h4,div,ol,ul,li,dl,dt,dd,p,form,input,select,textarea{margin:0;padding:0;}
div#skin ul, ol, li {list-style:none}
div#skin h1, h2, h3, h4, h5, h6 {margin:0px;padding:0px}
div#skin table, th, td {border-collapse:collapse}
div#skin img, fieldset{padding:0;border:0 none; vertical-align:top}
div#skin a{text-decoration:none; border:0px}
div#skin a:hover{text-decoration:underline; border:0px}
div#skin hr, caption, legend{display:none}
div#skin .bold{font-weight:bold}
div#skin .invisible{display:none}
div#skin h2#hd{display:none}
div#skin caption{display:none}
/*div#skin label{display:none}*/
div#skin label.visible_label{display:inline}
div#skin .img_hidden{display:none}
div#skin input.bor_none{border:none}
div#skin legend{display:none}
div#skin .untitle{display:none}
div#skin .clear{clear:both}
.fl{float:left}
.fr{float:right}
.ftw{font-weight:bold}
.fcr{color:#ff0000}
.tal{text-align:left;}
.tac{text-align:center;}
.tar{text-align:right;}

/*************로그인******************/
#log_wrap {border:0px solid #000;width:647px;background:url('/cms/image/login_bg.gif') no-repeat top;position:relative;margin:20px 0 20px 20px;}
#log_wrap p.log_tit {border:0px solid #000;padding:54px 0 0 190px;}
#log_wrap p.log_tit_new {border:0px solid #000;padding:10px 0 0 200px;}
#log_wrap p.log_tit span {padding-left:13px;}

#log_wrap ul.log_textbox {padding:30px 0 0 15px;}
#log_wrap ul.log_textbox li{line-height:20px;color:#727272;letter-spacing:-1px;padding-left:8px;}
#log_wrap ul.log_textbox li.bold_r{color:#FC6704;padding-top:15px;font-weight:bold;background: url('/cms/image/m_bullet01.gif') no-repeat 0px 21px;
}

.loginform {border:0px solid #000;float:left;width:600px;padding-top:20px;padding-left:242px;position:relative;}
.loginform dl.log_id {border:0px solid #000;width:216px;float:left;}
.loginform dl.log_pw {border:0px solid #000;width:216px;float:left;margin-top:5px;}
.loginform dl.log_id dt {float:left;width:56px;height:18px;line-height:18px;font-size:0%;padding-top:2px;}
.loginform dl.log_id dd {float:left;}
.loginform dl.log_pw dt {float:left;width:56px;height:18px;line-height:18px;font-size:0%;padding-top:2px;}
.loginform dl.log_pw dd {float:left;}
.loginform dt {padding:0px;margin:0px;display:inline;}
.loginform .intext {border:1px solid #E4E4E4;width:154px;height:18px;}

.loginform dl.log_chk {border:0px solid #000;width:216px;float:left;margin-top:5px;padding-left:58px;}
.loginform dl.log_chk dt {float:left;width:13px;height:13px;}
.loginform dl.log_chk dd {float:left;padding-left:4px;}

.loginform p.log_btn {border:0px solid #000;margin-top:-21px;margin-right:80px;float:right;}
.loginform p.txtfield{float:left}

ul.btn_join {border:0px solid #000;clear:both;width:300px;height:19px;padding-top:5px;padding-left:54px;}

ul.btn_join li {float:left;padding-right:4px;}

.loginform p.btn_txt {border:0px solid #000;padding:9px 0 0 52px;width:220px; height:24px;}

.terms textarea{padding:5px}
