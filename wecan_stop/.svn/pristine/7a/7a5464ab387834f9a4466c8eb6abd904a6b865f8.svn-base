.ztree {
    font-family: Verdana, Geneva, Arial, Helvetica, sans-serif;
    font-size: 12px;
    color: #666;
    white-space: nowrap;
    padding: 10px 0 0 10px;
}

.ztree img {
    border: 0px;
    vertical-align: middle;
}

.ztree a {
    color: #333;
    text-decoration: none;
}

.ztree a.node, .ztree a.nodeSel {
    white-space: nowrap;
    padding: 1px 2px 1px 2px;
}

.ztree a.node:hover, .ztree a.nodeSel:hover {
    color: #333;
    text-decoration: underline;
}

.ztree a.nodeSel {
    background-color: #c0d2ec;
}

.ztree .clip {
    overflow: hidden;
}