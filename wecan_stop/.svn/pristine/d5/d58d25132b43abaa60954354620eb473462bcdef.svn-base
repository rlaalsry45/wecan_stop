@charset "utf-8";
@import url(//fonts.googleapis.com/earlyaccess/nanumgothic.css);

body {background:#fff;height:100%;}
#wrap {margin-left:-210px;margin-top:-210px;width:419px;position:absolute;top:50%;left:50%;}
#header, #container {width:419px;}
#footer {width:419px;}
#footer p {text-align:center;font-size:13px;padding-top:5px;}
h1 {font-family: "Nanum Gothic", sans-serif;font-size:28px;font-weight:600;color:#000;line-height:47px;border-bottom:2px solid #ca2424;}
em {font-family: "Nanum Gothic", sans-serif;font-size:14px;color:#666666;}
.login ul {float:left;margin-top:20px;}
.login label {width:100px;font-size:14px;font-weight:600;color:#000;font-family: "Nanum Gothic", sans-serif;}
.login li.pw{margin-top:14px;}
.login input {border:1px solid #cecece;}
a.login {margin-top:20px;display:block;float:right;}
a.login input {text-align:center;width:80px;background:#35404f;font-weight:600;color:#fff;font-family: "Nanum Gothic", sans-serif;border:none;height:74px;font-size:13px;}
p.text {border-top:1px solid #d1d1d1;padding-top:10px;text-align:center;font-size:13px;font-weight:600;}
fieldset.login {padding-bottom:20px;}

a.crtfc {margin-top:20px;display:block;float:right;}
a.crtfc input {text-align:center;width:70px;background:#35404f;font-weight:600;color:#fff;font-family: "Nanum Gothic", sans-serif;border:none;height:35px;font-size:13px;}
a.newReg {margin-top:20px;display:block;float:right;}
a.newReg input {text-align:center;width:70px;background:#35404f;font-weight:600;color:#fff;font-family: "Nanum Gothic", sans-serif;border:none;height:35px;font-size:13px;margin-left:10px;}
a.copy {display:block;float:right;}
a.copy input {text-align:center;width:70px;background:#35404f;font-weight:600;color:#fff;font-family: "Nanum Gothic", sans-serif;border:none;height:35px;font-size:13px;margin-left:10px;}
.mt20 {margin-top:20px;}